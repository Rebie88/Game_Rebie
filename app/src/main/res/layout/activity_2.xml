<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bag1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="Activity2"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="52dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewAtPostion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="135dp" />

        <TextView
            android:id="@+id/textViewAtPostion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="135dp" />

        <TextView
            android:id="@+id/textViewAtPostion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="307dp"
            tools:layout_editor_absoluteY="139dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diceAtPostion1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/dice1"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="199dp" />

        <ImageView
            android:id="@+id/diceAtPostion2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/dice2"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="199dp" />

        <ImageView
            android:id="@+id/diceAtPostion3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/dice6"
            tools:layout_editor_absoluteX="296dp"
            tools:layout_editor_absoluteY="210dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonplayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="player1 Toss"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="313dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Bet: $20"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Player 2 Toss"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="321dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="P1Score:"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="401dp" />

        <TextView
            android:id="@+id/textViewPlayer1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P2Score:"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="323dp"
            tools:layout_editor_absoluteY="401dp" />

        <TextView
            android:id="@+id/textViewPlayer2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textViewPot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Player 1 Pot:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewP1Pot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="$50"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewPot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Player 2 Pot:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewP2Pot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="$50"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewWinner"
        android:layout_width="151dp"
        android:layout_height="56dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again" />

</LinearLayout>